1- packgage main
import "fmt"
func main() {
 var n1, n2 n3 float64
fmt.Print("Informe um número: ")
fmt.Scan(&n1)
fmt.Print("Informe outro número: ")
fmt.Scan(&n2)
fmt.Print(Informe outro número: ")
fmt.Scan(&n3)
soma := n1 + n2 + n3
fmt.Print("O valor da soma entre esses números é: ", soma)

2- packgage main
import "fmt"
func main() {  
var n1 int
fmt.Print("Informe um número: ")
fmt.Scan(&n1)
dobro := n1 x 2
triplo := n1 x 3 
quadruplo := n1 x 4
fmt.Println("O dobro do número é: ", dobro)
fmt.Println("O triplo do número é: ", triplo)
fmt.Println("O quadruplo do número é: ", quadruplo)

3-package main

import "fmt"

func main() {
	var altura, peso float64
	fmt.Print("Informe sua altura: ")
	fmt.Scan(&altura)
	fmt.Print("Informe seu peso: ")
	fmt.Scan(&peso)

	IMC := peso / (altura * altura)

	fmt.Print("Seu IMC é: ", IMC)
4- package main

import "fmt"

func main() {
	var n1, n2, n3 float64
	fmt.Print("Informe um número: ")
	fmt.Scan(&n1)
	fmt.Print("Informe outro número: ")
	fmt.Scan(&n2)
	fmt.Print("Informe outro número: ")
	fmt.Scan(&n3)

	media := ((n1 * 2) + (n2 * 3) + (n3 * 5)) / 10

	fmt.Print("A média pondera dos respectivos número é: ", media) 
5- package main

import "fmt"

func main() {
	var idade int
	fmt.Print("Informe sua idade: ")
	fmt.Scan(&idade)

	dias := idade * 365

	fmt.Print("Sua idade em dias é equivalente a +-: ", dias)

