3- package main

import "fmt"

func main() {

	var n int
	fmt.Print("digite o número")      
	fmt.Scan(&n)
	if n%2 == 0 {
		fmt.Print("o número é par")
	} else {
		fmt.Print("o número é ímpar")
	}
}

4-package main

import "fmt"

func main() {
	var peso, altura float64
	fmt.Print("informe o peso:")
	fmt.Scan(&peso)
	fmt.Print("informe a altura: ")
	fmt.Scan(&altura)

	IMC := peso / (altura * altura)
	fmt.Println("IMC", IMC)
	if IMC < 18.5 {
		fmt.Print("Abaixo do peso ideal ")
	} else if IMC >= 18.5 && IMC < 25 {
		fmt.Print("Peso ideal ")
	} else if IMC >= 25 && IMC <= 29 {
		fmt.Print("Peso ideal ")
	}
}

