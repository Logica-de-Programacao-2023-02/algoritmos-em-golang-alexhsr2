  8-package main

import "fmt"

func main() {
	var n int
	fmt.Print("Digite um número de 1 a 7: ")
	fmt.Scan(&n)
	switch n {
	case 1:

		fmt.Println("O dia de hoje é Domingo")

	case 2:

		fmt.Println("O dia de hoje é Segunda-feira")

	case 3:

		fmt.Println("O dia de hoje é Terça-feira")

	case 4:

		fmt.Println("O dia de hoje é Quarta-feira")

	case 5:

		fmt.Println("O dia de hoje é Quinta-feira")

	case 6:

		fmt.Println("O dia de hoje é Sexta-feira")

	case 7:

		fmt.Println("O dia de hoje é Domingo")

	}

}

9-package main

import "fmt"

func main() {
	var n1, n2, n3 float64
	fmt.Print("Informe o primeiro número: ")
	fmt.Scan(&n1)

	fmt.Print("Informe o segundo número: ")
	fmt.Scan(&n2)

	fmt.Print("Informe o terceiro número: ")
	fmt.Scan(&n3)

	if n1 < n2 && n2 < n3 {
		fmt.Print("A ordem crescente será: ", n1, n2, n3)
	} else if n1 < n3 && n3 < n2 {
		fmt.Print("A ordem crescente será: ", n1, n3, n2)
	} else if n2 < n1 && n1 < n3 {
		fmt.Print("A ordem crescente será: ", n2, n1, n3)
	} else if n2 < n3 && n3 < n1 {
		fmt.Print("A ordem crescente será: ", n2, n3, n1)
	} else if n3 < n1 && n1 < n2 {
		fmt.Print("A ordem crescente será: ", n3, n1, n2)
	} else if n3 < n2 && n2 < n1 {
		fmt.Print("A ordem crescente será: ", n3, n2, n1)
}

}

  10-package main

import "fmt"

func main() {

	var idade int
	fmt.Print("informe a sua idade: ")
	fmt.Scan(&idade)
	if idade <= 9 {
		fmt.Print("voce é: mirim. ")
	} else if idade <= 13 {
		fmt.Print("voce é: infantil.")
	} else if idade <= 17 {
		fmt.Print("voce é: juvenil.")
	} else if idade >= 18 {
		fmt.Print("voce é: adulto.")
	}
}
