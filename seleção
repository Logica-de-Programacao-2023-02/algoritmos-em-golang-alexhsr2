6-package main

import "fmt"

func main() {
	var n1, n2 int
	fmt.Print("Informe o primeiro numero")
	fmt.Scan(&n1)
	fmt.Print("Informe o segundo numero")
	fmt.Scan(&n2)

	if n1 >= 0 && n2 >= 0 {
		fmt.Println("o resultado é " , n1 * n2)

	} if n1 < 0 || n2 < 0 {
		fmt.Println("o resultado é ", n1 + n2)
	}

